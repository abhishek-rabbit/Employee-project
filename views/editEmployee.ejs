<%- include('./partials/header.ejs') -%>
<br>
    <div class="d-flex justify-content-center">
    <h1>Edit Employee</h1>
</div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form" action="editEmployee/action" method="post">
                    <input type="hidden" name="id" value="<%= employee._id %>">
                    <div class="form-group">
                        <label for="employeeName">Employee Name</label>
                        <input type="text" name="name" class="form-control" id="employeeName" aria-describedby="emailHelp" value="<%= employee.name %>">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                      </div>
                      <div class="form-group">
                        <label for="employeeDesignation">Designation</label>
                        <input type="text" name="designatiomn "class="form-control" id="employeeDesignation" value="<%= employee.designation %>">
                      </div>
                      <div class="form-group">
                        <label for="employeeSalary">Salary</label>
                        <input type="text" class="form-control" name="salary" id="employeeSalary" value="<%= employee.salary %>">
                      </div>
                      <input type="submit" class="btn btn-primary" placeholder="Edit Employee">
                </form>
            </div>
        </div>
    </div>
<%- include('./partials/footer.ejs') -%>